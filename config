#client.unfocused #444444 #444444 #315858
#client.focused_inactive #444444 #444444 #2c2c2f
#client.urgent #383a3b #383a3b #ee0000

# start chrome on workspace called 2:Web
exec i3-msg 'workspace 2:Web; exec google-chrome https://mail.verizon.com/webmail/driver?nimlet=showmessages&view=emails#mail_Emails_INBOX https://mail.google.com/mail/u/0/#inbox \ https://us-mg5.mail.yahoo.com/neo/launch?.rand=55clqanieh50a https://getpocket.com/a/queue/ https://makersmiths.slack.com/messages/general/ http://google.com'

# set energy star feature to On and wait 2 minutes of inactivity to turn off the screens
#exec --no-startup-id xset dpms 120
exec xset dpms 120
#
# wait 10 minutes of inactivity before launching the screenlocker i3lock
#exec --no-startup-id xautolock -time 10 -locker i3lock
#exec xautolock -time 10 -locker 'i3lock --color=806060 --beep --tiling --image $HOME/Pictures/Wallpaper/Dark-Pattern-Wide-Wallpaper.png'
exec xautolock -time 10 -locker 'i3lock --color=806060 --beep --tiling --image $HOME/Pictures/Wallpaper/ZZ-Top.png'
